model Project {
  id String @id @default(cuid())

  author_id String

  name        String
  description String
  image       String
  tags        String[]

  created DateTime @default(now())
  updated DateTime @updatedAt

  identifier String @unique // might use a link shortener for this (p1234)

  versions Version[]

  @@index([identifier])
}

model Version {
  id   String @id @default(cuid())
  name String // 23.5.30.1 (using calver for this)

  changes String?

  created DateTime @default(now())
  updated DateTime @updatedAt

  identifier String @unique // might use a link shortener for this (v1234)

  Project    Project @relation(fields: [project_id], references: [id])
  project_id String

  latest Boolean @default(false)

  links Link[]

  @@index([identifier, project_id])
}

model Link {
  id   String @id @default(cuid())
  name String

  description String @default("")
  icon        String @default("mdi:resource-description-framework")

  target String // the actual identifier (10.1234/abc)
  type   String // doi, url, ror, orcid, etc (from identifiers.org)

  created DateTime @default(now())
  updated DateTime @updatedAt

  version Version[]
}
